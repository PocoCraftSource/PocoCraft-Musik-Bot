#!/bin/bash

tempfile=`cat /etc/pococraft/pococraft-scripts.conf | grep "CURRENTCLIDIDTEMPFILE=" | cut -d'=' -f2`

teamspeakclientqueryport=`cat /etc/pococraft/pococraft-scripts.conf | grep "TEAMSPEAKCLIENTQUERYPORT=" | cut -d'=' -f2`

teamspeakclientqueryaddress=`cat /etc/pococraft/pococraft-scripts.conf | grep "TEAMSPEAKCLIENTQUERYADDRESS=" | cut -d'=' -f2`

teamspeakclientqueryclientprogram=`cat /etc/pococraft/pococraft-scripts.conf | grep "TEAMSPEAKCLIENTQUERYCLIENTPROGRAM=" | cut -d'=' -f2`

teamspeakclientquerytimeout=`cat /etc/pococraft/pococraft-scripts.conf | grep "TEAMSPEAKCLIENTQUERYTIMEOUT=" | cut -d'=' -f2`

while :
do
  netcat -z $teamspeakclientqueryaddress $teamspeakclientqueryport -w $teamspeakclientquerytimeout
  portstatus=$?
    if [[ $portstatus = 0 ]]
      then
        (echo "whoami") | $teamspeakclientqueryclientprogram $teamspeakclientqueryaddress $teamspeakclientqueryport -w $teamspeakclientquerytimeout > $tempfile ; mac2unix $tempfile > /dev/null 2>&1
        clidid=`cat $tempfile | grep clid`
        echo -e "$clidid"
        exit $?
    fi
done

exit $?
